{
  "name": "express-crud",
  "version": "1.0.0",
  "description": "CRUD App",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "serve": "nodemon src/index.js",
    "code:clean": "yarn code:lint && yarn code:format",
    "code:lint": "eslint --ext .js,.jsx,.ts,.tsx \"src/\" --fix",
    "code:format": "prettier './src/**/**.{js,jsx,ts,tsx}' --write",
    "code:check:rules": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awpogodin/express-crud.git"
  },
  "keywords": [
    "express",
    "nodejs",
    "crud"
  ],
  "author": "AlexandrPogodin <awpogodin@mail.ru>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/awpogodin/express-crud/issues"
  },
  "homepage": "https://github.com/awpogodin/express-crud#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.4",
    "express": "^4.17.3",
    "mongoose": "^5.8.7",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "nodemon": "^1.19.4"
  }
}
