<%- include('../../fragments/header.ejs'); %>

<div class="container mt-3 text-center">
  <a class="btn btn-outline-primary" href="/games/add">Add</a>
</div>

<% if (games.length > 0) {%>
<div class="container mt-3">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Developer</th>
        <th>Platforms</th>
        <th>ACTIONS</th>
      </tr>
    </thead>
    <tbody>
      <% games.forEach(game => { %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.developer %></td>
        <td><%= game.platforms %></td>
        <td class="buttons-action">
          <a class="btn btn-outline-warning btn-action" href="/games/edit/<%= game.id %>">Edit</a>
          <a class="btn btn-outline-danger btn-action del-btn" href="#" data-id="<%= game.id %>"
            >Del</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>

<script src="/js/games.js"></script>
<% }; %> <%- include('../../fragments/footer.ejs'); %>
